<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC107"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="BTN 1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment1_btn2"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment1_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="BTN 2"
        app:layout_constraintBottom_toTopOf="@id/fragment1_btn3"
        app:layout_constraintTop_toBottomOf="@id/fragment1_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fragment1_btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="BTN 3"
        app:layout_constraintTop_toBottomOf="@id/fragment1_btn2"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>